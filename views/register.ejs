<%- include("partials/header"); -%>

<form class="form-signin" action="/register" method="POST">
    <h1 class="h3 mb-3 font-weight-normal">Register</h1>
    <label for="name" class="sr-only">User Name</label>
    <input type="text" id="name" name="name" class="form-control" placeholder="User Name" required autofocus>
    <label for="inputEmail" class="sr-only">Email address</label>
    <input type="email" id="email" name="email" class="form-control" placeholder="Email address" required>
    <label for="password" class="sr-only">Password</label>
    <input type="password" id="password" name="password" class="form-control" placeholder="Password" required>

    <button class="btn btn-lg btn-login btn-block" type="submit">Register</button>

    <div class="already-reg">
        <p>Already Registered?<a class="reg-login" href='/login'>Login</a></p>
    </div>
</form>


<%- include("partials/footer"); -%>